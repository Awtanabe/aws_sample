.top-image
  = image_tag 'top-image.png'

.container
  .home-wrapper
    - @posts.each do |post|
      .item
        .post-image
          = image_tag 'top-image.png'
        .post-body
          = link_to post.title, post_path(post)
          = render 'layouts/write_button'
          = link_to "編集", edit_post_path(post)
          = link_to "削除", post_path(post), method: :delete

= render 'layouts/write_button'
